<Window x:Class="CourseProject.MainProgramm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="MainProgramm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="1" Height="350" VerticalAlignment="Bottom" Foreground="Black" Name="kakugodno" Background="Ivory"></DataGrid>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Button Margin="20" Height="40" Content="Редактирование"/>
            <Button Margin="20" Height="40" Content="Отчет" />
            <Button Margin="20" Height="40" Content="Список работников"/>
        </StackPanel>
    </Grid>
</Window>
